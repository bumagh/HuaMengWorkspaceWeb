generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String   @unique
  password  String
  role      String
  avatar    String   @default("üë§")
  level     Int      @default(1)
  xp        Int      @default(0)
  maxXp     Int      @default(100)
  isAdmin   Boolean  @default(false)
  isOnline  Boolean  @default(false)
  status    String   @default("Âú®Á∫ø")
  createdAt DateTime @default(now())

  projects     Project[]
  comments     Comment[]
  replies      Reply[]
  chatMessages ChatMessage[]
  ratings      Rating[]
  pointRecords PointRecord[]
  userRoles    UserRole[]
  userGroups   UserGroupMember[]
  createdGroups UserGroup[] @relation("GroupCreator")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String
  progress    Int      @default(0)
  status      String   @default("ËøõË°å‰∏≠")
  priority    String   @default("‰∏≠")
  startDate   String
  endDate     String
  createdAt   DateTime @default(now())
  creatorId   String
  creator     User     @relation(fields: [creatorId], references: [id])

  members    String   @default("")
  roles      String   @default("[]")

  milestones   Milestone[]
  keyNotes     KeyNote[]
  comments     Comment[]
  chatMessages ChatMessage[]
  ratings      Rating[]
}

model Milestone {
  id        String  @id @default(cuid())
  name      String
  done      Boolean @default(false)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model KeyNote {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  rating    Int      @default(5)
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  replies Reply[]
}

model Reply {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id        String   @id @default(cuid())
  text      String
  type      String   @default("user")
  createdAt DateTime @default(now())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Rating {
  id            String   @id @default(cuid())
  quality       Int      @default(5)
  progress      Int      @default(5)
  teamwork      Int      @default(5)
  communication Int      @default(5)
  overall       Int      @default(5)
  comment       String   @default("")
  createdAt     DateTime @default(now())
  authorId      String
  author        User     @relation(fields: [authorId], references: [id])
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model PointRecord {
  id        String   @id @default(cuid())
  action    String
  points    Int
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
}

model StrategyItem {
  id          String   @id @default(cuid())
  title       String
  description String   @default("")
  progress    Int      @default(0)
  category    String   @default("ÁõÆÊ†á")
  status      String   @default("ËøõË°å‰∏≠")
  createdAt   DateTime @default(now())
}

// RBAC ÊùÉÈôêÁ≥ªÁªüÊ®°Âûã
model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  displayName String
  description String   @default("")
  isSystem    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userRoles       UserRole[]
  rolePermissions RolePermission[]
  groupRoles      UserGroupRole[]
}

model Permission {
  id          String   @id @default(cuid())
  name        String   @unique
  displayName String
  description String   @default("")
  resource    String
  action      String
  createdAt   DateTime @default(now())

  rolePermissions RolePermission[]
}

model RolePermission {
  id           String   @id @default(cuid())
  roleId       String
  permissionId String
  createdAt    DateTime @default(now())

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
}

model UserRole {
  id        String   @id @default(cuid())
  userId    String
  roleId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
}

// Áî®Êà∑ÁªÑÁÆ°ÁêÜ
model UserGroup {
  id          String   @id @default(cuid())
  name        String   @unique
  displayName String
  description String   @default("")
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator User              @relation("GroupCreator", fields: [creatorId], references: [id])
  members UserGroupMember[]
  roles   UserGroupRole[]
}

model UserGroupMember {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  createdAt DateTime @default(now())

  group UserGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

model UserGroupRole {
  id        String   @id @default(cuid())
  groupId   String
  roleId    String
  createdAt DateTime @default(now())

  group UserGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  role  Role      @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([groupId, roleId])
}
